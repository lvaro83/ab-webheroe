<?xml version="1.0"?>
<ruleset name="Serviplus plugin Coding Standards">

		<description>A custom set of code standard rules to check for WordPress plugin Serviplus.</description>

	<rule ref="WordPress-Core" />
	<rule ref="WordPress-Docs" />
	<rule ref="WordPress-Extra" />

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="plctst"/>
			</property>
		</properties>
	</rule>

	<rule ref="WordPress-Extra">
		<exclude name="WordPress.WP.EnqueuedResourceParameters.MissingVersion" />
	</rule>

	<!-- Run against the PHPCompatibilityWP ruleset -->
	<rule ref="PHPCompatibilityWP"/>

	<!-- Check for cross-version support for PHP 7.4 and higher -->
	<config name="testVersion" value="7.4-"/>

	<exclude-pattern>*/docs/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/ab-webheroe/*</exclude-pattern>
</ruleset>
